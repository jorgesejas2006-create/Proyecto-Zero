<Window x:Class="sing_up.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sing_up"
        mc:Ignorable="d"
        Title="MainWindow" Height="700"
        Width="500"
        Icon="imagenes/goty2.jpg">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="imagenes/goty1.jpg"
               Stretch="Fill" 
               Opacity="0.9"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Label x:Name="LOGIN"
               Grid.Row="0"
               Grid.ColumnSpan="2"
               Content="LOGIN"
               FontSize="50"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Foreground="AntiqueWhite"/>

        <Label x:Name="lblgmail"
                   Content="E-mail:"
                   FontSize="30"
                   FontWeight="Bold"
                   HorizontalAlignment="Right"
                   Margin="0,4,130,0"
                   Foreground="AntiqueWhite" RenderTransformOrigin="0.585,1.416" Grid.Row="1"/>
        <TextBox x:Name="txtgmail"
                    Grid.Column="1"
                    Grid.Row="1"
                    Height="50"
                    FontSize="20"
                    FontFamily="Arial"
                    Background="DarkRed"
                    Foreground="White"
                    Opacity="0.9"
                    Padding="14"  Margin="10,4,10,6" />
        <Label x:Name="lblcontraseña"
          Content="Contraseña:"
          FontSize="30"
          FontWeight="Bold"
          HorizontalAlignment="Right"
          Margin="0,4,50,0"
          Foreground="AntiqueWhite"
          Grid.Row="2" Width="196"/>
        <PasswordBox x:Name="pwdpas"
             Grid.Column="1"
             Grid.Row="2"
             Height="50"
             FontSize="20"
             Background="DarkRed"
             Foreground="White"
             Padding="14" Margin="10,45" />

        <Button x:Name="btnLinpiar"
                    Grid.Column="0"
                    Grid.Row="3"
                    Content="Limpiar" Click="btnLinpiar_Click"/>
        <Button x:Name="btnAceptar"
                    Grid.Column="1"
                    Grid.Row="3"
                    Content="Aceptar" Click="btnAceptar_Click" />
        <Button x:Name="btnRegistro"
                    Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Content="Registrarse" Click="btnRegistro_Click" />
        <Label x:Name="lblMensajes"
               Grid.Row="10"
               Grid.ColumnSpan="2"
               FontSize="15"/>
    </Grid>
    
</Window>
